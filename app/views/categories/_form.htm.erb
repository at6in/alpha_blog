

<%= render 'share/errors', obj: @category %> 


      <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group"> 
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
      </div> 
        <div class="col-sm-100"> 
      
          <%= f.text_field :title, class: "form-control", placeholder: "title of category", autofocus: true %>
        </div>
      </div> 
       <div class="form-group"> 
        <div class="control-label col-sm-100">
        <%= f.label :description%>
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of article" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit %>
        </div>
      </div>
      <% end %> 
      <div class="col-xs-4 col-xs-offset-4"></div>
        [ <%= link_to "Cancel request and return to article listing", articles_path %> ]
      </div>
  </div>
</div>
